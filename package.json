{
	"name": "novara-music",
	"version": "1.0.0",
	"description": "Novara Music is a music bot for Discord, written in JavaScript using the Discord.js, Typescript, lavalink-client (Lavalink) library.",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsup --watch --onSuccess=\"dotenvx run -- node dist/index.js\"",
		"start": "dotenvx run -- node dist/index.js",
		"build": "tsup",
		"lint": "biome check",
		"format": "biome format --write"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Riseofpower1/Novara-Music.git"
	},
	"keywords": [
		"discord",
		"music",
		"bot",
		"lavalink",
		"lavalink-client",
		"lavamusic",
		"typescript",
		"prisma"
	],
	"author": "appujet",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/Riseofpower1/Novara-Music/issues"
	},
	"homepage": "https://github.com/Riseofpower1/Novara-Music#readme",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@swc/core": "^1.13.5",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.21",
		"@types/i18n": "^0.13.12",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^24.3.0",
		"@types/signale": "^1.4.7",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.49.0",
		"axios": "^1.6.0",
		"cors": "^2.8.5",
		"discord.js": "^14.22.1",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"genius-lyrics-api": "^3.2.1",
		"i18n": "^0.15.1",
		"lavalink-client": "^2.6.0",
		"mongoose": "^8.0.0",
		"node-system-stats": "^2.0.5",
		"passport": "^0.7.0",
		"passport-spotify": "^1.1.0",
		"signale": "^1.4.0",
		"tslib": "^2.8.1",
		"undici": "^7.15.0",
		"zod": "^4.1.1"
	},
	"signale": {
		"displayScope": true,
		"displayBadge": true,
		"displayDate": true,
		"displayFilename": true,
		"displayLabel": true,
		"displayTimestamp": true,
		"underlineLabel": true
	}
}
